{
  "name": "dtg-backend",
  "version": "0.1.0",
  "description": "DTG Backend API - Phase 0",
  "main": "dist/src/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/src/index.js",
    "migrate": "tsx src/db/migrate.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts",
