# ==============================================================================
# DTG Environment Variables Template
# ==============================================================================
# Copy this file to .env and fill in the values.
# NEVER commit the actual .env file to version control.

# Database
DB_NAME=dtg
DB_USER=dtg_user
DB_PASSWORD=CHANGE_ME_TO_A_SECURE_PASSWORD

# Network
PORT=3000
CORS_ORIGIN=http://localhost:5173

# Security (HS256 Secrets)
# Generate with: openssl rand -hex 64
JWT_SECRET=CHANGE_ME_TO_RANDOM_64_BYTES
PN_HASH_SECRET=CHANGE_ME_TO_RANDOM_64_BYTES
API_KEY_ENCRYPTION_SECRET=CHANGE_ME_TO_RANDOM_32_BYTES_FOR_AES
DEVICE_HASH_SECRET=CHANGE_ME_TO_RANDOM_64_BYTES
VOTER_HASH_SECRET=CHANGE_ME_TO_RANDOM_64_BYTES

# Blockchain
# Use a private key that does NOT hold significant funds in production
BLOCKCHAIN_PRIVATE_KEY=0x_CHANGE_ME_TO_SECURE_PRIVATE_KEY

# ZK Nullifier
NULLIFIER_SECRET=CHANGE_ME_TO_RANDOM_64_BYTES

# Admin
ADMIN_PASSWORD=CHANGE_ME_SECURE_ADMIN_PASS
